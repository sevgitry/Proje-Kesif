                <label asp-for="MaterialNo" class="control-label"></label>
                <select asp-for="MaterialNo" class="form-control" asp-items="ViewBag.MaterialNo"></select>
                <span asp-validation-for="MaterialNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TurNo" class="control-label"></label>
                <select asp-for="TurNo" class="form-control" asp-items="ViewBag.TurNo"></select>
                <span asp-validation-for="TurNo" class="text-danger"></span>
